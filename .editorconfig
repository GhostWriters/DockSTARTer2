# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2
end_of_line = lf

[*.{json,jsonc}]
indent_style = space
indent_size = 2
end_of_line = lf

[*.md]
indent_style = space
indent_size = 2
end_of_line = lf

# Shell scripts (Legacy)
[*.sh]
indent_style = tab
end_of_line = lf
switch_case_indent = true
space_redirects = true
simplify = true

[*.{yaml,yml}]
indent_style = space
indent_size = 2
end_of_line = lf

# Go (Standard is tabs)
[*.go]
indent_style = tab
indent_size = 4
end_of_line = lf
